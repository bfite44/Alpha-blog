<h1 class="text-center mt-4">Category <%= @category.name %> profile</h1>

<% if logged_in? && current_user.admin? %>
  <div class="text-center mt-4">
    <%= link_to "Edit Category Name", edit_category_path(@category), class: "btn btn-outline-info" %>
  </div>
<% end %>

<h3 class="text-center mt-4">Articles for <%= @category.name %></h3>

<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>

<%= render 'articles/article' %>
<% if @category.articles.count == 0 %>
  <p class="text-center">This category doesn't have any articles</p>
<% end %>
<%= link_to "Back to Bloggers", users_path, class: "btn btn-outline-secondary mb-4" %>

<div class="flickr_pagination mb-4">
  <%= will_paginate @articles, :container => false %>
</div>

