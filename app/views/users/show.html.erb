<h1 class="text-center mt-4">View <%= @user.username %> profile</h1>

<div class="text-center mt-4">
  <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info" %>
</div>

<h3 class="text-center mt-4">Articles by <%= @user.username %></h3>

<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>

<%= render 'articles/article' %>
<% if @user.articles.count == 0 %>
  <p class="text-center">This user has not written any articles</p>
<% end %>
<%= link_to "Back to Bloggers", users_path, class: "btn btn-outline-secondary mb-4" %>

<div class="flickr_pagination mb-4">
  <%= will_paginate @articles, :container => false %>
</div>
